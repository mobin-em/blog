<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // اعمال حالت تاریک بر اساس تنظیمات صفحه اصلی
        if (localStorage.getItem('darkMode') === 'true') {
            document.documentElement.classList.add('dark');
        }

        const container = document.getElementById('posts-container');
        const pagination = document.getElementById('pagination');
        let currentPage = 1;

        // تابع نمایش اسکلتون‌های بارگذاری
        function showLoadingSkeletons() {
            container.innerHTML = '';
            for (let i = 0; i < 6; i++) {
                container.innerHTML += `
                    <div class="post-card animate-pulse">
                        <div class="h-64 bg-gray-200 dark:bg-dark-700"></div>
                        <div class="p-6 space-y-4">
                            <div class="h-6 rounded-full bg-gray-200 dark:bg-dark-700 w-3/4"></div>
                            <div class="space-y-2">
                                <div class="h-4 rounded-full bg-gray-200 dark:bg-dark-700"></div>
                                <div class="h-4 rounded-full bg-gray-200 dark:bg-dark-700 w-5/6"></div>
                                <div class="h-4 rounded-full bg-gray-200 dark:bg-dark-700 w-2/3"></div>
                            </div>
                            <div class="flex justify-between items-center pt-4">
                                <div class="h-9 rounded-full bg-gray-200 dark:bg-dark-700 w-32"></div>
                                <div class="h-4 rounded-full bg-gray-200 dark:bg-dark-700 w-20"></div>
                            </div>
                        </div>
                    </div>
                `;
            }
        }

        // تابع دریافت پست‌ها از API
        async function fetchPosts(page = 1) {
            showLoadingSkeletons();

            try {
                const response = await axios.get(`/api/posts?page=${page}&per_page=9`);
                renderPosts(response.data.data);
                renderPagination(response.data);
            } catch (error) {
                console.error(error);
                container.innerHTML = `
                    <div class="col-span-full text-center py-16">
                        <div class="inline-flex items-center justify-center w-24 h-24 bg-red-100 dark:bg-red-900/50 rounded-full mb-6">
                            <span class="mdi mdi-alert-circle-outline text-red-500 dark:text-red-300 text-5xl"></span>
                        </div>
                        <h2 class="text-2xl font-bold mb-3 page-title">خطا در دریافت مقالات</h2>
                        <p class="text-lg mb-8 max-w-md mx-auto leading-relaxed page-subtitle">
                            ${error.response?.data?.message || 'متاسفانه مشکلی در ارتباط با سرور پیش آمده است.'}
                        </p>
                        <button onclick="fetchPosts(currentPage)"
                                class="px-8 py-3 text-white rounded-full flex items-center mx-auto bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-600 hover:to-purple-600 transition">
                            <span class="mdi mdi-refresh mr-2"></span>
                            تلاش مجدد
                        </button>
                    </div>
                `;
            }
        }

        // تابع نمایش پست‌ها
        function renderPosts(posts) {
            container.innerHTML = '';

            if (posts.length === 0) {
                container.innerHTML = `
                    <div class="col-span-full text-center py-16">
                        <div class="inline-flex items-center justify-center w-24 h-24 bg-indigo-100 dark:bg-indigo-900/50 rounded-full mb-6">
                            <span class="mdi mdi-book-remove-outline text-indigo-500 dark:text-indigo-300 text-5xl"></span>
                        </div>
                        <h3 class="text-2xl font-bold mb-3 page-title">مقاله‌ای یافت نشد</h3>
                        <p class="page-subtitle max-w-md mx-auto">
                            در حال حاضر هیچ مقاله‌ای برای نمایش وجود ندارد. به زودی مقالات جدید منتشر خواهد شد.
                        </p>
                    </div>
                `;
                return;
            }

            posts.forEach(post => {
                const excerpt = post.content.length > 150
                    ? post.content.substring(0, 150) + '...'
                    : post.content;

                const date = new Date(post.created_at).toLocaleDateString('fa-IR');
                const readingTime = post.reading_time || Math.max(1, Math.ceil(post.content.length / 1500));

                const postElement = `
                    <div class="post-card">
                        ${post.image_url ? `
                            <img src="${post.image_url}" alt="${post.title}" class="w-full h-64 object-cover">
                        ` : `
                            <div class="w-full h-64 no-image-placeholder">
                                <span class="text-lg">بدون تصویر</span>
                            </div>
                        `}
                        <div class="p-6">
                            <div class="flex items-center gap-2 mb-4 flex-wrap">
                                <span class="text-xs px-3 py-1 rounded-full bg-indigo-100 dark:bg-indigo-900/50 text-indigo-800 dark:text-indigo-200">
                                    <span class="mdi mdi-calendar-outline ml-1"></span>
                                    ${date}
                                </span>
                                <span class="text-xs px-3 py-1 rounded-full bg-pink-100 dark:bg-pink-900/50 text-pink-800 dark:text-pink-200">
                                    <span class="mdi mdi-clock-outline ml-1"></span>
                                    ${readingTime} دقیقه مطالعه
                                </span>
                            </div>
                            <h2 class="text-xl font-bold mb-3 post-title leading-snug">${post.title}</h2>
                            <p class="post-excerpt mb-5 leading-relaxed">${excerpt}</p>
                            <div class="flex justify-between items-center">
                                <a href="/posts/${post.id}"
                                   class="px-5 py-2.5 text-white rounded-full flex items-center bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-600 hover:to-purple-600 transition">
                                    مطالعه مقاله
                                    <span class="mdi mdi-arrow-left mr-1"></span>
                                </a>
                                <span class="text-xs px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-200">
                                    <span class="mdi mdi-eye-outline ml-1"></span>
                                    ${post.views || '۰'} بازدید
                                </span>
                            </div>
                        </div>
                    </div>
                `;
                container.innerHTML += postElement;
            });
        }

        // تابع نمایش صفحه‌بندی
        function renderPagination(data) {
            if (!data.links || data.links.length <= 3) {
                pagination.innerHTML = '';
                return;
            }

            let paginationHTML = '';

            data.links.forEach(link => {
                if (!link.url) return;

                const isActive = link.active;
                const isPrevious = link.label.includes('Previous');
                const isNext = link.label.includes('Next');
                const pageNumber = isPrevious ? 'قبلی' : isNext ? 'بعدی' : link.label;

                paginationHTML += `
                    <button onclick="handlePagination('${link.url}')"
                        class="px-5 py-2 rounded-full transition-all
                               ${isActive ? 'bg-gradient-to-r from-indigo-500 to-purple-500 text-white shadow-lg font-bold' :
                    'bg-white dark:bg-dark-700 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-dark-600 shadow-md'}
                               ${isPrevious ? 'ml-3' : isNext ? 'mr-3' : 'mx-1'}">
                        ${isPrevious ? '« صفحه قبلی' : isNext ? 'صفحه بعدی »' : pageNumber}
                    </button>
                `;
            });

            pagination.innerHTML = paginationHTML;
        }

        // تابع عمومی برای صفحه‌بندی
        window.handlePagination = function(url) {
            const page = new URL(url).searchParams.get('page') || 1;
            currentPage = page;
            fetchPosts(page);
            window.scrollTo({ top: 0, behavior: 'smooth' });
        };

        // بارگذاری اولیه
        fetchPosts();
    });
</script>
</body>
</html>
